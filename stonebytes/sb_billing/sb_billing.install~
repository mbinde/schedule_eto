			(
			 'type' => 'int',
			 'unsigned' => TRUE,
			 'not null' => TRUE,
			 'default' => 0,
			 ),
			'participant_uid' => array
			(
			 'type' => 'int',
			 'unsigned' => TRUE,
			 'not null' => TRUE,
			 'default' => 0,
			 ),
			),
     'primary key' => array('appointment_id', 'participant_uid'),
     );     
  $schema['sb_appointment_event'] = array
    (
     'description' => 'Individual scheduled event',
     'fields' => array (
			'appointment_event_id' => array
			(
			 'type' => 'serial',
			 'unsigned' => TRUE,
			 'not null' => TRUE
